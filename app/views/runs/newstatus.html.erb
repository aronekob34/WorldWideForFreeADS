<% header("runs#status","Change Status") %>
<%#= render "shared/partials/alert", text: @text %>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2><%= yield(:run_status) %></h2>
               <p>You should change this status, when you gave away all the fliers</p>
            </header>
            <div class="panel-body">
            <%= link_to "Change Status", changestatus_run_path, :method => :post, :class => "btn btn-warning wideButton btn-fill btn-main" %>
            <%= link_to "Cancel", companies_path, :class => "btn btn-primary wideButton btn-fill btn-main" %>
            </div>
        </section>   
    </div>
</div>
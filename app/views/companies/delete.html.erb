<% header("companies","Delete Company") %>
<%= render "shared/partials/alert", text: @text %>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
               <h2><%= yield(:companies) %></h2>
            </header>
            <div class="panel-body">
            <%= link_to "Delete", {:action => "destroy"}, :method => :delete, :class => "btn btn-warning wideButton btn-fill btn-main" %>
            <%= link_to "Cancel", companies_path, :class => "btn btn-primary wideButton btn-fill btn-main" %>
            </div>
        </section>   
    </div>
</div>